#!/usr/bin/env ruby
require 'thor'
require 'lmk'

class LetMeKnow < Thor

  desc "exec COMMAND", "run a command and get an SMS with its result"
  method_options :t => :boolean
  def exec(*command)
    if(options.t?) 
      puts "running command `#{command.join ' '}`"
    end
  end

  desc "config", "read the current config file"
  def config
    ::LMK::Config.new.raw
  end
end

LetMeKnow.start
